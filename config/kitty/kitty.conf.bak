# BEGIN_KITTY_THEME
# Ayu Light
include current-theme.conf
# END_KITTY_THEME

# FONT SIZE
font_size 16.0
font_family Montserrat
# BACKGROUND IMAGE
background_image ~/.config/kitty/kitty-light.png
background_image_layout centered 
background_tint 0.9

# # TAB BAr
active_tab_font_style normal
inactive_tab_font_style normal
tab_bar_edge top 
tab_bar_style custom
tab_separator " "
tab_title_template " {sup.index} {title}{bell_symbol}{activity_symbol} "
# active_tab_title_template " {sup.index} {title}{bell_symbol}{activity_symbol} "
tab_bar_min_tabs 0
mouse_hide_wait 1.0

# RENAME WINDOW
map ctrl+shift+r kitten rename_window.py
